<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <display-name></display-name>
  
  <context-param>
  	<param-name>storeDirectory</param-name>
  	<param-value>/WEB-INF/files</param-value>
  </context-param>
  
  <!-- 过滤器 -->
	<filter>
		<filter-name>SetAllCharacterEncodingFilter</filter-name>
		<filter-class>com.wcc.uitl.SetAllCharacterEncodingFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>SetAllCharacterEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
  
  
  
  <!--  控制servlet -->
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>Controller</servlet-name>
    <servlet-class>com.wcc.servlet.controlleer.Controller</servlet-class>
  </servlet>
  <servlet-mapping>
    	<servlet-name>Controller</servlet-name>
    	<url-pattern>/servlet/Controller</url-pattern>
  	</servlet-mapping>
	<!-- 登入 servlet-->
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.wcc.servlet.controlleer.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>LoginServlet</servlet-name>
	    <url-pattern>/servlet/LoginServlet</url-pattern>
  	</servlet-mapping>	
	
	<!-- 上传的servlet -->
	<servlet>	
		<servlet-name>UpLodeServlet</servlet-name>
		<servlet-class>com.wcc.servlet.controlleer.UpLodeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>UpLodeServlet</servlet-name>
	    <url-pattern>/servlet/UpLodeServlet</url-pattern>
  	</servlet-mapping>	
	
	
	<!-- 上传的Demo-->
	<servlet>	
		<servlet-name>UpLodeServletDemo</servlet-name>
		<servlet-class>com.wcc.servlet.controlleer.UpLodeServletDemo</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>UpLodeServletDemo</servlet-name>
	    <url-pattern>/servlet/UpLodeServletDemo</url-pattern>
  	</servlet-mapping>	
	
	
	<!-- 显示文件 servlet  -->
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>ShowAllFilesServlet</servlet-name>
    <servlet-class>com.wcc.servlet.controlleer.ShowAllFilesServlet</servlet-class>
  </servlet>
  
  
  <!-- 下载的servlet  -->
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>DownLoadeServlet</servlet-name>
    <servlet-class>com.wcc.servlet.controlleer.DownLoadeServlet</servlet-class>
  </servlet>
  
  

	
  <servlet-mapping>
    <servlet-name>ShowAllFilesServlet</servlet-name>
    <url-pattern>/servlet/ShowAllFilesServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DownLoadeServlet</servlet-name>
    <url-pattern>/servlet/DownLoadeServlet</url-pattern>
  </servlet-mapping>
 
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
